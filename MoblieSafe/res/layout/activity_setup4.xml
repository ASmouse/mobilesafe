<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        style="@style/title_style"
        android:text="4.恭喜您,设置完成" />
    
    <!--放到保护是否开启的复选框-->
    <CheckBox 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启放到保护"
        android:layout_marginLeft="3dp"
        />
    <!-- 描述信息 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="防盗保护已经关闭"
         />
    

    <!-- 线性布局显示4个点 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- 选中点 -->
        <!-- 点的图片系统中有  view也可以这样用!!!! -->
 <!-- 默认点 -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:drawable/presence_invisible" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:drawable/presence_invisible" />
 
       
<!-- 默认点 -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:drawable/presence_invisible" />
   <!-- 选中点 -->
       

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:drawable/presence_online" />
        </LinearLayout>

    <!-- 相对布局显示图片和按钮 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/step_4" />
        <!-- 下一个 按钮 android:drawableRight="" -->

        <Button
            android:onClick="nextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/dialog_btn_seletor"
            android:drawableRight="@drawable/next"
            android:text="下一个"
            android:textColor="#fff" />

        <!-- 上一个 按钮 android:drawableLeft="" -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:background="@drawable/dialog_btn_seletor"
            android:drawableLeft="@drawable/pre"
            android:text="上一个"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>