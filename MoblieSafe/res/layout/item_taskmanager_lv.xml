<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- task图标 -->

    <ImageView
        android:id="@+id/iv_taskmanager_lv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/sjfd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_taskmanager_lv_icon"
        android:orientation="vertical" >

        <!-- task名字 -->

        <TextView
            android:id="@+id/tv_taskmanager_lv_taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aap名字"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_taskmanager_lv_taskmemsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rom"
            android:textSize="16sp" />
    </LinearLayout>
<!--   android:button="@drawable/cb_taskmanager_selector"
        android:clickable="false"
        android:focusable="false" -->
    <CheckBox
        android:id="@+id/cb_taskmanager_lv_tasksize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:button="@drawable/cb_taskmanager_selector"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>