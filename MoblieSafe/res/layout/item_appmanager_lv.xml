<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    
    <!--  app图标-->
	<ImageView
	    android:layout_marginLeft="10dp"
	    android:id="@+id/iv_appmanager_lv_icon"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:src="@drawable/sjfd"
	    />
	
	<LinearLayout 
	    android:layout_marginLeft="5dp"
	    android:layout_toRightOf="@id/iv_appmanager_lv_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerVertical="true"
	    
	    >
	    <!--app名字  -->
	   <TextView 
	       android:id="@+id/tv_appmanager_lv_appname"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="aap名字"
	       android:textSize="18sp"
	       />
	    <TextView 
	       android:id="@+id/tv_appmanager_lv_applocation"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="rom"
	       android:textSize="16sp"
	       />
	</LinearLayout> 
		    <TextView 
		        android:layout_marginRight="10dp"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
	       android:id="@+id/tv_appmanager_lv_appsize"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="rom"
	       android:textSize="20sp"
	       />
</RelativeLayout>
