<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    
       <item android:id="@android:id/background" android:drawable="@drawable/security_progress_bg">
        <shape >
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />
        </shape>
    </item>
    <item android:id="@android:id/progress"
        android:drawable="@drawable/security_progress"
        >
        <clip>
            <shape >
               <corners android:radius="5dip" />


            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#de42ec"
                android:startColor="#de42ec" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape >
                <corners android:radius="0dip" />


            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#df0024"
                android:startColor="#df0024" />
            </shape>
        </clip>
    </item>

</layer-list>